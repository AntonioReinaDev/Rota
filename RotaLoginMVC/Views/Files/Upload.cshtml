@{
    ViewData["Title"] = "Importar Arquivo";
	Layout = "~/Views/Shared/_LayoutLogado.cshtml";
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

@using (Html.BeginForm("UploadFile", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
	<div class="text-center">
		<h4 class="display-4">Importar arquivo Excel</h4>
		<br/>
			<div class="form-group">
				<input class="form-control" type="file" name="file" accept=".xlsx" required/>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Importar" class="btn btn-primary" />
			</div>
	</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
