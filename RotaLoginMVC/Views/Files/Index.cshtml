@model string[]

@{
	ViewData["Title"] = "Rotas";
	Layout = "~/Views/Shared/_LayoutLogado.cshtml";
	int index = 0;
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

<h1 class="col-md-4"> Rotas</h1>

<div class="row">
	<br />
	<br />
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<br />
				<label class="control-label"> <strong>Times Disponíveis:</strong></label><br />

				@foreach (var team in ViewBag.TeamsAvailable)
				{
					<div style = "display : inline-block;">
					<input name="checkTeams" type="checkbox" value=@team.Id id="teamsAvailable" />
					<label for="@team.Name"> @team.Name</label>&nbsp&nbsp
					</div>
					
				}
			</div>
			<br />
			<div class="form-group">
				<label class="control-label"><strong>Selecione os campos para gerar a O.S: </strong></label><br /><br />

				@foreach (var item in ViewBag.Headers)
				{
					<div style = "display : inline-block;">
					<input name="checkData" type="checkbox" value=@index id="dataOptions" />
					<label for="@item.ToString()"> @item.ToString()</label>&nbsp&nbsp
					</div>
					index++;
				}
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Gerar Documento" class="btn btn-primary" onclick="GenerateDocument()" />
				<a asp-controller="Files" asp-action="OperatingCity" class="btn btn-primary">Voltar</a>
				<a asp-controller="Account" asp-action="AccessDenied" class="btn btn-primary">Menu</a>
			</div>
		</form>
	</div>
</div>